{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "es2015",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "esnext",
    // 配置module别名
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "*": ["*"],
      "containers/*": ["containers/*"],
      "components/*": ["components/*"],
    },
    // 开启装饰器
    "experimentalDecorators":true
  },
  "include": ["src/**/*"]
}
